<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baoge.dao.MenuDao">

    <resultMap id="Menutree" type="com.baoge.utils.MenuTree">
        <id property="id" column="id"/>
        <result property="parentId" column="pid"/>
        <result property="title" column="title" />
        <result property="href" column="href"  />
        <result property="target" column="target" />
        <result property="icon" column="icon" />
        <result property="visible" column="visible"  />
        <result property="sort" column="sort"  />
    </resultMap>

    <!--查询菜单列表-->
    <select id="getALLMenuList" resultType="com.baoge.entity.Menu">
        select * FROM menu ORDER BY sort asc ;
    </select>

    <select id="getListALLMenuList" resultMap="Menutree">
         select * FROM menu ORDER BY sort asc ;
    </select>
    <!--根据用户id查询菜单列表-->
    <select id="getALLMenuListByUserId" resultType="com.baoge.entity.Menu">
        SELECT distinct id,title,icon,target,href,pid,sort,visible
        FROM   menu m
	    LEFT JOIN role_menu rm ON m.id = rm.menu_id
	    LEFT JOIN user_role ur ON rm.role_id = ur.role_id
        WHERE ur.user_id =#{userId}  AND m.visible =0
    </select>

    <!--根据用户id查询菜单列表 所有-->
    <select id="getMenuListAllByUserId" resultType="com.baoge.entity.Menu">
        select * FROM menu m
        LEFT JOIN role_menu rm ON m.id=rm.menu_id
        LEFT JOIN user_role ur ON rm.role_id=ur.role_id
        WHERE ur.user_id=#{userId}
    </select>


    <!--增加菜单-->
    <insert id="addMenu">
        INSERT INTO menu(title,sort,icon,href,pid,visible)
        VALUES (#{title},#{sort},#{icon},#{href},#{pid},#{visible})
    </insert>

    <select id="getMenuById" resultType="com.baoge.entity.Menu">
        select * from menu where id=#{id}
    </select>

    <!--根据角色id查询菜单-->
    <select id="getMenuListByRoleId" resultType="com.baoge.entity.Menu">
            SELECT menu.* FROM role_menu,menu WHERE role_menu.role_id=#{roleId} AND role_menu.menu_id=menu.id
    </select>

    <!--修改菜单-->
    <update id="editMenu" parameterType="com.baoge.entity.Menu">
        UPDATE menu
        <set>
            <if test="title != null">title=#{title},</if>
            <if test="icon != null">icon=#{icon},</if>
            <if test="href != null">href=#{href},</if>
            <if test="visible != null">visible=#{visible},</if>
            <if test="sort != null">sort=#{sort}</if>
        </set>
        where id=#{id}
    </update>

    <!-- 删除菜单-->
    <delete id="deleteMenu">
        DELETE FROM menu WHERE id=#{id}
    </delete>
    <delete id="deleteRoleMenu">
        DELETE FROM role_menu WHERE menu_id=#{id}
    </delete>


</mapper>